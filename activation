#!/bin/bash

# === Function: Print usage ===
print_usage() {
  echo "Usage:"
  echo "  bash ./activation             # Copy scripts to /usr/local/bin and update via git"
  echo "  bash ./activation -h|--help   # Show this help message"
}

# === Show help ===
if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  print_usage
  exit 0
fi

# === Git self-update using gitupdate if available ===
if command -v gitupdate >/dev/null 2>&1; then
  echo "ðŸ”„ Attempting to update this repo using: gitupdate LazyShell"
  if gitupdate LazyShell; then
    echo "âœ… LazyShell updated."
  else
    echo "âš ï¸ Warning: Failed to update LazyShell using gitupdate."
  fi
else
  echo "â„¹ï¸ 'gitupdate' not found. Skipping git update step."
fi

# === Begin copying files ===
count=0
found_files=0

echo "ðŸ“¦ Copying regular files from current directory to /usr/local/bin..."

# Use find for safe handling, skip certain files
while IFS= read -r -d '' file; do
  filename=$(basename "$file")

  # Skip README.md, LICENSE, and the activation script itself
  if [[ "$filename" == "README.md" || "$filename" == "LICENSE" || "$filename" == "activation" ]]; then
    continue
  fi

  found_files=1
  echo "ðŸ“ Copying \"$file\" â†’ /usr/local/bin/$filename ..."
  
  if sudo cp -f "$file" "/usr/local/bin/$filename"; then
    if sudo chmod +x "/usr/local/bin/$filename"; then
      echo "âœ… Successfully copied and made executable: $filename"
      count=$((count + 1))
    else
      echo "âŒ Error: Failed to make executable: $filename" >&2
    fi
  else
    echo "âŒ Error: Failed to copy $file" >&2
  fi
done < <(find . -maxdepth 1 -type f -print0)

# === Summary ===
if [ $found_files -eq 0 ]; then
  echo "âš ï¸ No regular files found in the current directory to copy."
fi

echo "ðŸ“Š Total files copied and made executable: $count"
