#!/bin/bash

# Script to copy all regular files from current directory to /usr/local/bin
# Replace existing files with the same name and make copied files executable
# Uses sudo to handle permission issues

# Find all regular files in current directory (non-recursive)
files=$(find . -maxdepth 1 -type f)

# Copy each file to /usr/local/bin and make it executable
for file in $files; do
    # Remove leading ./ from filename
    filename=$(basename "$file")
    sudo cp -f "$file" /usr/local/bin/"$filename"
    sudo chmod +x /usr/local/bin/"$filename"
done

echo "All regular files copied to /usr/local/bin and made executable."
